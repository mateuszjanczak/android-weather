<?xml version="1.0" encoding="utf-8"?>
<androidx.swiperefreshlayout.widget.SwipeRefreshLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/swipeContainer"
    tools:context=".WeatherActivity">


<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/weatherIcon"
        android:layout_width="125dp"
        android:layout_height="125dp"
        android:layout_marginTop="16dp"
        android:foregroundGravity="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/cityName"
        android:gravity="center_horizontal"
        android:text="TarnÃ³w"
        android:textStyle="bold"
        android:textColor="#28516C"
        android:textSize="32dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/weatherIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:textColor="#326687"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cityName" />

    <TableLayout
        android:id="@+id/tableLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="39dp"
        app:layout_constraintTop_toTopOf="@id/time"
        tools:layout_editor_absoluteX="0dp">

        <TableRow style="@style/table_row">

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TableRow style="@style/table_row_two">

                    <TextView
                        android:id="@+id/temperatureTxt"
                        style="@style/heading"
                        android:text="@string/temperature" />
                </TableRow>

                <TableRow style="@style/table_row_two">

                    <TextView
                        android:id="@+id/temperature"
                        style="@style/heading_value" />
                </TableRow>

            </TableLayout>
        </TableRow>

        <TableRow style="@style/table_row">

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TableRow style="@style/table_row_two">

                    <TextView
                        android:id="@+id/pressureTxt"
                        style="@style/heading"
                        android:text="@string/pressure" />
                </TableRow>

                <TableRow style="@style/table_row_two">

                    <TextView
                        android:id="@+id/pressure"
                        style="@style/heading_value" />
                </TableRow>

            </TableLayout>
        </TableRow>

        <TableRow style="@style/table_row">

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TableRow style="@style/table_row_two">

                    <TextView
                        android:id="@+id/humidityTxt"
                        style="@style/heading"
                        android:text="@string/humidity" />
                </TableRow>

                <TableRow style="@style/table_row_two">

                    <TextView
                        android:id="@+id/humidity"
                        style="@style/heading_value" />
                </TableRow>

            </TableLayout>
        </TableRow>

        <TableRow style="@style/table_row">

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TableRow style="@style/table_row_two">

                    <TextView
                        android:id="@+id/temperatureMinTxt"
                        style="@style/heading"
                        android:text="@string/temperature_min" />
                </TableRow>

                <TableRow style="@style/table_row_two">

                    <TextView
                        android:id="@+id/temperatureMin"
                        style="@style/heading_value" />
                </TableRow>

            </TableLayout>
        </TableRow>

        <TableRow style="@style/table_row">

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TableRow style="@style/table_row_two">

                    <TextView
                        android:id="@+id/temperatureMaxTxt"
                        style="@style/heading"
                        android:text="@string/temperature_max" />
                </TableRow>

                <TableRow style="@style/table_row_two">

                    <TextView
                        android:id="@+id/temperatureMax"
                        style="@style/heading_value" />
                </TableRow>

            </TableLayout>
        </TableRow>

    </TableLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
</androidx.swiperefreshlayout.widget.SwipeRefreshLayout>